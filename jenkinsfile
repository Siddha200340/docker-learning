pipeline{
    agent any 
    parameters {
        string(name: 'BRANCH_NAME', defaultValue: 'master', description: 'Branch to build from')
        string(name: 'REPO_URL', defaultValue: 'https://github.com/siddha200340/docker-learning.git', description: 'Git Repository Url')
        string(name: 'Image_Name', defaultValue: 'docker-learning', description: 'Docker Image Name')
        string(name: 'Container_Name', defaultValue: 'docker-learning-container', description: 'Docker Container Name')
        string(name: 'PORT', defaultValue: '5000', description: 'Port to run the application')
    }
    stages{
        stage("Checkout") {
            steps{
                git branch: "${params.BRANCH_NAME}", url: "${params.REPO_URL}"
            }
        }
        stage("Build") {
            steps {
                bat "docker build -t ${params.Image_Name} ."
            }
        }
        stage("Run") {
            steps {
                bat "docker rm -f ${params.Container_Name}"
                bat "docker compose up -d --build"
            }
        }
    }
    post {
        always {
            bat "docker ps -a"
        }
    }
}