pipeline{
    agent any 
    stages{
        stage("Checkout") {
            steps{
                git branch : 'master', url: 'https://github.com/siddha200340/docker-learning.git'
            }
        }
        stage("Build") {
            steps {
                bat "docker build -t docker-learning ."
            }
        }
        stage("Run") {
            steps {
                bat "docker run -d -p 5000:5000 --name docker-learning-container docker-learning"
            }
        }
    }
}